<Window x:Class="Task_WPF11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_WPF11"
        mc:Ignorable="d"
        Title="Задание 11" Height="450" Width="800">
    <StackPanel>

        <Path Fill="Red" Stroke="Black">
            <Path.Data>
                <GeometryGroup FillRule="EvenOdd">
                    <EllipseGeometry Center="225, 200" RadiusX="150"  RadiusY="150"/>
                    <EllipseGeometry Center="225, 200" RadiusX="110"  RadiusY="110"/>
                    <RectangleGeometry Rect="115, 180, 220, 40">
                        <RectangleGeometry.Transform>
                            <RotateTransform CenterX="225" CenterY="200" Angle="-45"/>
                        </RectangleGeometry.Transform>
                    </RectangleGeometry>
                </GeometryGroup>
            </Path.Data>
        </Path>
        <Button Content="Показать цветок" Height="45" Margin="352,0,175,0" Click="Button_Click"/>

    </StackPanel>
</Window>
